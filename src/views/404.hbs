<div class="grid h-screen place-content-center px-4">
  <div class="text-center">
    <h1 class="text-9xl font-black text-gray-200">404</h1>
    <p class="text-2xl font-bold tracking-tight text-white sm:text-4xl">Uh-oh!</p>
    {{#if description}}
    <p class="mt-4 text-white">{{description}}</p>
    {{else}}
    <p class="mt-4 text-white">We can't find that page.</p>
    {{/if}}
    {{#if (notEq "embed")}}
    <a href="/"
			class="mt-6 inline-block rounded bg-indigo-600 px-5 py-3 text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring">
      Go Back Home
    </a>
    {{/if}}
  </div>
</div>
