<div x-data="{ switchOn: {{#if (eq on 'true')}} true {{else}} false {{/if}} }" class="flex items-center space-x-2 my-2">
  <input id="{{id}}" type="checkbox" name="{{id}}" class="hidden" {{#if (eq on 'true')}} checked {{/if}} :checked="switchOn">
  <button 
        x-ref="switchButton"
        type="button" 
				@click="switchOn = !switchOn; {{#if onClick}} window['{{onClick}}'].call() {{/if}}"
        :class="switchOn ? 'bg-blue-600' : 'bg-neutral-200'" 
        class="relative inline-flex h-6 py-0.5 ml-4 focus:outline-none rounded-full w-10"
        x-cloak>
    <span :class="switchOn ? 'translate-x-[18px]' : 'translate-x-0.5'" class="w-5 h-5 duration-200 ease-in-out bg-white rounded-full shadow-md"></span>
  </button>
  <label @click="$refs.switchButton.click(); $refs.switchButton.focus()" :id="$id('{{id}}')" 
        :class="{ 'text-blue-600': switchOn, 'text-gray-400': ! switchOn }"
        class="text-md select-none"
        x-cloak>
    {{text}}<span class="text-xs text-yellow-500">{{warning}}</span>
  </label>
</div>
